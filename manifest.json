{
  "manifest_version": 3,
  "name": "TrueLinks",
  "version": "1.0",
  "description": "Shows real link destinations and risk levels with detailed tooltips on hover.",

  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "512": "icon512.png"
    },
    "default_title": "TrueLinks"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
